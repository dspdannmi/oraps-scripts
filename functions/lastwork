
function lastwork
    {

    if [ "${1}" = "" ]
    then
        offset=1
    else
        offset=$1
    fi
    

    settoday

    if [ "${WORKDIR_TOP}" = "" ]
    then
        echo "WARNING: WORKDIR_TOP not set - creating under $HOME/work"
        topdir=${HOME}/work
    else
        topdir=${WORKDIR_TOP}        
    fi

#    if [ "${offset}" = "1" ] || [ "${offset}" = "" ]
#    then
#        target_dir=$(ls -1d ${topdir}/* | tail -1)
#    else
#        target_dir=$(ls -1d ${topdir}/* | tail -1)
#    fi

    target_dir=$(ls -1d ${topdir}/* | tail -${offset} | head -1)

    cd ${target_dir} && export DSP_CURRENT_WORKDIR=${target_dir}
    }


