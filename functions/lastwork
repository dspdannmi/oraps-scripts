
function lastwork
    {
    if [ "${WORKDIR_TOP}" = "" ]
    then
        echo "WARNING: WORKDIR_TOP not set - creating under $HOME/work"
        topdir=${HOME}/work
    else
        topdir=${WORKDIR_TOP}        
    fi

    dir=${topdir}/$today${suffix}

    target_dir=$(ls -1d ${topdir}/* | tail -1)

    cd ${target_dir} && export CURRENT_WORKDIR=${target_dir}
    }


