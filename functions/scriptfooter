
#---------------------------------------------------------------------------------------
#
# function scriptfooter
#
#---------------------------------------------------------------------------------------

NOW=$(date +%Y-%m-%d:%H:%M:%S)

function scriptfooter
    {
    if [ "${scriptname}" = "" ]
    then
	scriptname=""
    fi

    echo "<<< ---------------------------------- ${scriptname}: END:   [${NOW}] ---------------------------------- >>>" | tee -a ${LOGFILE}
    }


