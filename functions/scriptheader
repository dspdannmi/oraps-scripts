
#---------------------------------------------------------------------------------------
#
# function scriptheader
#
#---------------------------------------------------------------------------------------

NOW=$(date +%Y-%m-%d:%H:%M:%S)

function scriptheader
    {
    if [ "${scriptname}" = "" ]
    then
	scriptname=""
    fi

    echo "<<< ---------------------------------- ${scriptname}: START: [${NOW}] ---------------------------------- >>>" | tee -a ${LOGFILE}
    }
