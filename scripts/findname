#!/bin/bash

#+++___________________________________________________________________________________
#
#
# Script name:                  findname
#
# Description:			Find a file in directory tree based on name
#
# Parameters:
#
# Environment:
#
# Return codes:
#
# Modification history:
#
#       03-Oct-2005     1.0     oracle    Original version
#
#+++___________________________________________________________________________________

CS_TOP=${CS_TOP:-/opt/dsp}
. ${CS_TOP}/env/dsp.env
. ${CS_TOP}/env/funcs.sh

USAGE_STRING="searchstring"


#
# Define local script variables
#

#
# Script starts here
#
#
set_error_trap

find . -name \*${1}\*



exit $EXITCODE

