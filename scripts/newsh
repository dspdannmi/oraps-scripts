#!/bin/bash

#+++___________________________________________________________________________________
#
#
# Script name:          	XXSCRIPT_NAMEXX
#
# Description:          
#
# Parameters:
#
# Environment:
#
# Modification history:
#
#	DD-MON-YYYY	1.0	oracle	Original version
#
#+++___________________________________________________________________________________

. /opt/dsp/env/dsp.env
. ${CS_TOP}/env/funcs.sh


USAGE_STRING="${scriptname} file1 [file2, file3, ...]"

modhist=$(date +%d-%b-%Y)

if [ $# -lt 1 ]
then
    usage
fi

for newscript in ${*}
do
 if [ -f $newscript ]
 then
     echo error: $newscript exists
     EXITCODE=1
 else
    cp $CS_TOP/resources/templates/sh.template ${newscript}
    status=$?

    if [ $status -ne 0 ]
    then
	echo error: could not create script ${newscript}
	EXITCODE=1
    else
	chmod ug+x,u+w ${newscript}
	status=$?

	if [ $status -ne 0 ]
	then
	    echo error: could not chmod script ${newscript}
	    EXITCODE=1
	else
	    replace XXSCRIPT_NAMEXX ${newscript} ${newscript}
	    replace DD-MON-YYYY ${modhist} ${newscript}
	    replace  xxxuseridxxx ${thisuser} ${newscript}
	    status=$?

	    if [ $status -ne 0 ]
	    then
		echo error: could not replace new script ${newscript}
		EXITCODE=1
	    else
		vi ${newscript}
	    fi
	fi
    fi
 fi
done

exit $EXITCODE
