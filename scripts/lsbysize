#!/bin/bash

#+++___________________________________________________________________________________
#
#
# Script name:                  lsbysize
#
# Description:			Directory listing ordered by size
#
# Parameters:
#
# Environment:
#
# Return codes:
#
# Modification history:
#
#       02-Jul-2004     1.0     oracle    Original version
#
#+++___________________________________________________________________________________

CS_TOP=${CS_TOP:-/opt/dsp}
. ${CS_TOP}/env/dsp.env
. ${CS_TOP}/env/funcs.sh

#
# Script starts here
#
#
set_error_trap

dir=${1:-}

ls -al $dir | sort -k5n



exit $EXITCODE

