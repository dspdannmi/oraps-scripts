CS_TOP=${CS_TOP:-/opt/dsp}
. ${CS_TOP}/env/dsp.env
. ${CS_TOP}/env/funcs.sh

USAGE_STRING="sleep_time_seconds"


#
# Define local script variables
#

#
# Script starts here
#
#
set_error_trap

if [ $# -ne 1 ]
then
    usage
else
    sleep_time_seconds=$1
fi

while true
do
    sqlx execute statspack.snap
    sleep $sleep_time_seconds
done



exit $EXITCODE

